#Basic Calculator
def addition():
    a=int(input("enter first number"))
    b=int(input("enter second number"))
    c=a+b
    print("sum is",c)
def subtraction():
    a=int(input("enter first number"))
    b=int(input("enter second number"))
    c=a-b
    print("subtraction is",c)
def multiplication():
    a=int(input("enter first number"))
    b=int(input("enter second number"))
    c=a*b
    print("multiplication is",c)
def division():
    a=int(input("enter first number"))
    b=int(input("enter second number"))
    c=a/b
    print("division",c)
while True:
    print("1.Addition\n2.Subtraction\n3.Multiplication\n4.Division")
    choice=int(input("enter choice number"))
    if choice==1:
        addition()
    elif choice==2:
        subtraction()
    elif choice==3:
        multiplication()
    elif choice==4:
        division()
    else:
        print("Invalid Choice")
